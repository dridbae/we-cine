{% verbatim %}
    <div class="p-5" v-if="movies.length > 0" v-for="movie in movies">
      <div class="row mb-5 movie-card p-5">
                    <div class="col">
                        <img v-bind:src="'https://image.tmdb.org/t/p/w500/' + movie.posterPath"/>
                    </div>
                    <div class="col">
                        <h3>{{ movie.title }}</h3>
                        <p>{{ movie.overview }}</p>
                    </div>
                    <div class="col align-self-end col-2 text-right">
                        <button type="button" class="btn btn-primary" data-toggle="modal" v-bind:data-target="'#modal' + movie.id" v-on:click="populateTrailer(movie.id)">
                            Show details
                        </button>
                    </div>
                </div>
                 <div class="modal fade" v-bind:id="'modal' + movie.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">{{ movie.originalTitle }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="container-fluid">
                                  <div class="row">
                                     <embed v-if="trailer" v-bind:src="'https://www.youtube.com/embed/' + trailer" allowfullscreen="true"
                                   style="width: 100%;height:50vh;">
                                   </div>
                                   <div class="row mt-3">
                                 <div class="col-12">
                                <h2>{{ movie.title }} ({{ movie.originalTitle }})</h2>
                            </div>
                            <div class="col-12 mt-3">
                                <p>Release Year : </p>
                                <p>Average note : {{movie.voteAverage}} for {{movie.voteCount}} note</p>
                                <p>Overview : {{ movie.overview }}</p>
                            </div>
                                   </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                            </div>
                        </div>
                    </div>
                </div>
        </div>
    <div class="row" v-if="movies.length == 0 && triggered == true">
      <span>Aucun resultat</span>
    </div>
{% endverbatim %}
